pwd
echo $srcdir

if test "x$srcdir" != "x"; then
  cd $srcdir;
fi

pwd

cd test/
../../anitmt-calc/anitmt-calc test.ini
cd test_ani/
../../../utils/render -w 200 -h 150
../../../utils/tga2avi/tga2avi -f 5 -e 150
../../../utils/mkavi/mkavi -f 5 -e 150 -o film-cram.avi
cd ../../

cd myrobot/
../../anitmt-calc/anitmt-calc myrobot_small.ini
cd ani/
../../../utils/render -w 400 -h 300
../../../utils/tga2avi/tga2avi -f 1 -e 14
../../../utils/mkavi/mkavi -f 1 -e 14 -o film-cram.avi
cd ../../

cd circles/
../../anitmt-calc/anitmt-calc circles_small.ini
cd ani/
../../../utils/render -w 96 -h 72
../../../utils/tga2avi/tga2avi -f 3 -e 42
../../../utils/mkavi/mkavi -f 3 -e 42 -o film-cram.avi
cd ../../

exit 0
