#!/bin/sh
# Use HConfigVars to get some config. 
# Either use "source HConfigVars" (make sure $1="") or 
# use HConfigVars VAR

CFLAGS='@CFLAGS@'
CXXFLAGS='@CXXFLAGS@'
LDADD='@LDADD@'
CC='@CC@'
CXX='@CXX@'

case "$1" in
	"") ;;
	"CFLAGS")    echo "$CFLAGS" ;;
	"CXXFLAGS")  echo "$CXXFLAGS" ;;
	"LDADD")     echo "$LDADD" ;;
	"CC")        echo "$CC" ;;
	"CXX")       echo "$CXX" ;;
	*)  echo "[unknown]" ;;
esac

