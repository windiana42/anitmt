pwd
echo $srcdir

if test "x$srcdir" != "x"; then
  cd $srcdir;
fi

pwd

cd test/
../../anitmt-calc/anitmt-calc test.ini
cd test_ani/
../../../utils/render -w 200 -h 150 || exit -1
../../../utils/tga2avi/tga2avi -f 5 -e 150 || exit -2
../../../utils/mkavi/mkavi -f 5 -e 150 -o film-cram.avi || exit -3
cd ../../

cd myrobot/
../../anitmt-calc/anitmt-calc myrobot_small.ini
cd ani/
../../../utils/render -w 400 -h 300 || exit -4
../../../utils/tga2avi/tga2avi -f 1 -e 14 || exit -5
../../../utils/mkavi/mkavi -f 1 -e 14 -o film-cram.avi || exit -6
cd ../../

cd circles/
../../anitmt-calc/anitmt-calc circles_small.ini
cd ani/
../../../utils/render -w 96 -h 72 || exit -7
../../../utils/tga2avi/tga2avi -f 1 -e 14 || exit -8
../../../utils/mkavi/mkavi -f 1 -e 14 -o film-cram.avi || exit -9
cd ../../

./clean_examples

exit 0
