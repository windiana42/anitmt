if test "x$builddir" == "x"; then
  builddir=".";
fi
if test "x$srcdir" == "x"; then
  srcdir=".";
fi
origdir=$(pwd);
# make pathes absolute 
if test "x$(cut $builddir -c 1)" != "x/"; then
  builddir=$origdir/$builddir;
fi
if test "x$(cut $srcdir -c 1)" != "x/"; then
  srcdir=$origdir/$srcdir;
fi

echo SRCDIR = $srcdir
echo BUILDDIR = $builddir
echo Workingdirectory = $origdir
echo $top_srcdir
echo $top_builddir

# ================ Example: test ====================================
DIR=test
ANI_DIR=test_ani
INI=autocheck_test.ini

echo "ani_dir=$builddir/$DIR/$ANI_DIR/" > $builddir/$DIR/__TMP_ANI_DIR__
cat $srcdir/$DIR/$INI $builddir/$DIR/__TMP_ANI_DIR__ > $builddir/$DIR/__TMP_INI__.ini
cd $srcdir/$DIR/ || exit 1
$builddir/../anitmt-calc/anitmt-calc $builddir/$DIR/__TMP_INI__.ini
cd $origdir # just in case of srcdir/builddir being relative pathes
rm $builddir/$DIR/__TMP_ANI_DIR__ $builddir/$DIR/__TMP_INI__.ini

cd $builddir/$DIR/$ANI_DIR/ || exit 1
$srcdir/../utils/render -w 192 -h 144 || exit -1
$builddir/../utils/tga2avi/tga2avi -f 5 -e 150 -o film-raw.avi || exit -2
$builddir/../utils/mkavi/mkavi -f 5 -e 150 -o film-cram.avi || exit -3
cd $origdir # just in case of srcdir/builddir being relative pathes

# ================ Example: myrobot ====================================
DIR=myrobot
ANI_DIR=ani
INI=autocheck_myrobot.ini

echo "ani_dir=$builddir/$DIR/$ANI_DIR/" > $builddir/$DIR/__TMP_ANI_DIR__
cat $srcdir/$DIR/$INI $builddir/$DIR/__TMP_ANI_DIR__ > $builddir/$DIR/__TMP_INI__.ini
cd $srcdir/$DIR/ || exit 1
$builddir/../anitmt-calc/anitmt-calc $builddir/$DIR/__TMP_INI__.ini
cd $origdir # just in case of srcdir/builddir being relative pathes
rm $builddir/$DIR/__TMP_ANI_DIR__ $builddir/$DIR/__TMP_INI__.ini

cd $builddir/$DIR/$ANI_DIR/ || exit 1
$srcdir/../utils/render -w 400 -h 300 || exit -4
$builddir/../utils/tga2avi/tga2avi -f 1 -e 14 -o film-raw.avi || exit -5
$builddir/../utils/mkavi/mkavi -f 1 -e 14 -o film-cram.avi || exit -6
cd $origdir # just in case of srcdir/builddir being relative pathes

# ================ Example: circles ====================================
DIR=circles
ANI_DIR=ani
INI=autocheck_circles.ini

echo "ani_dir=$builddir/$DIR/$ANI_DIR/" > $builddir/$DIR/__TMP_ANI_DIR__
cat $srcdir/$DIR/$INI $builddir/$DIR/__TMP_ANI_DIR__ > $builddir/$DIR/__TMP_INI__.ini
cd $srcdir/$DIR/ || exit 1
$builddir/../anitmt-calc/anitmt-calc $builddir/$DIR/__TMP_INI__.ini
cd $origdir # just in case of srcdir/builddir being relative pathes
rm $builddir/$DIR/__TMP_ANI_DIR__ $builddir/$DIR/__TMP_INI__.ini

cd $builddir/$DIR/$ANI_DIR/ || exit 1
$srcdir/../utils/render -w 96 -h 72 || exit -7
$builddir/../utils/tga2avi/tga2avi -f 1 -e 14 -o film-raw.avi || exit -8
$builddir/../utils/mkavi/mkavi -f 1 -e 14 -o film-cram.avi || exit -9
cd $origdir # just in case of srcdir/builddir being relative pathes

cd $builddir
#$srcdir/clean_examples || exit 1
cd $origdir

exit 0
